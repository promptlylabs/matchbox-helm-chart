{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Matchbox Helm Chart Values",
    "description": "Configuration values for the Matchbox FHIR server Helm chart",
    "type": "object",
    "$defs": {
        "httpProbe": {
            "type": "object",
            "description": "Kubernetes HTTP probe configuration",
            "properties": {
                "httpGet": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string",
                            "description": "HTTP path for the probe"
                        },
                        "port": {
                            "type": ["string", "integer"],
                            "description": "Port name or number for the probe"
                        }
                    }
                },
                "initialDelaySeconds": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Seconds before the first probe"
                },
                "periodSeconds": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "How often to perform the probe (seconds)"
                },
                "timeoutSeconds": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Probe timeout (seconds)"
                },
                "failureThreshold": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Number of consecutive failures before marking unhealthy"
                }
            }
        }
    },
    "properties": {
        "replicaCount": {
            "type": "integer",
            "minimum": 1,
            "description": "Number of pod replicas"
        },
        "image": {
            "type": "object",
            "description": "Container image configuration",
            "properties": {
                "repository": {
                    "type": "string",
                    "description": "Container image repository"
                },
                "pullPolicy": {
                    "type": "string",
                    "enum": ["Always", "Never", "IfNotPresent"],
                    "description": "Image pull policy"
                },
                "tag": {
                    "type": "string",
                    "description": "Image tag override (defaults to chart appVersion)"
                }
            }
        },
        "imagePullSecrets": {
            "type": "array",
            "description": "Docker registry pull secrets",
            "items": {
                "type": "object"
            }
        },
        "nameOverride": {
            "type": "string",
            "description": "Override the chart name"
        },
        "fullnameOverride": {
            "type": "string",
            "description": "Override the full release name"
        },
        "serviceAccount": {
            "type": "object",
            "description": "Service account configuration",
            "properties": {
                "create": {
                    "type": "boolean",
                    "description": "Whether to create a service account"
                },
                "automount": {
                    "type": "boolean",
                    "description": "Automatically mount API credentials"
                },
                "annotations": {
                    "type": "object",
                    "description": "Annotations to add to the service account"
                },
                "name": {
                    "type": "string",
                    "description": "Name of the service account (auto-generated if empty)"
                }
            }
        },
        "podAnnotations": {
            "type": "object",
            "description": "Annotations to add to pods"
        },
        "podLabels": {
            "type": "object",
            "description": "Labels to add to pods"
        },
        "podSecurityContext": {
            "type": "object",
            "description": "Pod-level security context"
        },
        "securityContext": {
            "type": "object",
            "description": "Container-level security context"
        },
        "service": {
            "type": "object",
            "description": "Kubernetes service configuration",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
                    "description": "Service type"
                },
                "port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535,
                    "description": "Service port"
                }
            }
        },
        "ingress": {
            "type": "object",
            "description": "Ingress configuration. Set ingress.enabled=true and configure hosts/tls."
        },
        "resources": {
            "type": "object",
            "description": "CPU/memory resource requests and limits"
        },
        "startupProbe": {
            "$ref": "#/$defs/httpProbe",
            "description": "Startup probe (allows time for IG loading on boot)"
        },
        "livenessProbe": {
            "$ref": "#/$defs/httpProbe",
            "description": "Liveness probe"
        },
        "readinessProbe": {
            "$ref": "#/$defs/httpProbe",
            "description": "Readiness probe"
        },
        "autoscaling": {
            "type": "object",
            "description": "Horizontal Pod Autoscaler configuration",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "Enable autoscaling"
                },
                "minReplicas": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Minimum number of replicas"
                },
                "maxReplicas": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Maximum number of replicas"
                },
                "targetCPUUtilizationPercentage": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 100,
                    "description": "Target CPU utilization for scaling"
                },
                "targetMemoryUtilizationPercentage": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 100,
                    "description": "Target memory utilization for scaling"
                },
                "behavior": {
                    "type": "object",
                    "description": "HPA scaling behavior configuration"
                }
            }
        },
        "strategy": {
            "type": "object",
            "description": "Deployment strategy (e.g., RollingUpdate)"
        },
        "pdb": {
            "type": "object",
            "description": "Pod Disruption Budget configuration",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "Enable Pod Disruption Budget"
                },
                "minAvailable": {
                    "type": ["string", "integer"],
                    "description": "Minimum available pods (absolute number or percentage)"
                },
                "maxUnavailable": {
                    "type": ["string", "integer"],
                    "description": "Maximum unavailable pods (absolute number or percentage)"
                }
            }
        },
        "volumes": {
            "type": "array",
            "description": "Additional volumes for the deployment",
            "items": {
                "type": "object"
            }
        },
        "volumeMounts": {
            "type": "array",
            "description": "Additional volume mounts for the container",
            "items": {
                "type": "object"
            }
        },
        "nodeSelector": {
            "type": "object",
            "description": "Node selector constraints"
        },
        "tolerations": {
            "type": "array",
            "description": "Pod tolerations",
            "items": {
                "type": "object"
            }
        },
        "affinity": {
            "type": "object",
            "description": "Pod affinity rules"
        },
        "networkPolicy": {
            "type": "object",
            "description": "Network policy configuration",
            "properties": {
                "ingress": {
                    "type": "array",
                    "description": "Ingress network policy rules",
                    "items": {
                        "type": "object"
                    }
                },
                "egress": {
                    "type": "array",
                    "description": "Egress network policy rules",
                    "items": {
                        "type": "object"
                    }
                }
            }
        },
        "env": {
            "type": "array",
            "description": "Additional environment variables",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Environment variable name"
                    },
                    "value": {
                        "type": "string",
                        "description": "Environment variable value"
                    }
                },
                "required": ["name"]
            }
        },
        "secretNames": {
            "type": "array",
            "description": "Names of Kubernetes Secrets to load as environment variables via envFrom",
            "items": {
                "type": "string"
            }
        },
        "matchbox": {
            "type": "object",
            "description": "Matchbox application configuration (rendered as Spring Boot application.yaml). Supports arbitrary Spring Boot, HAPI FHIR, and matchbox configuration properties.",
            "additionalProperties": true
        }
    }
}
